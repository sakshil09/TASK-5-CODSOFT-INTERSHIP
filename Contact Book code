import json
import os

CONTACTS_FILE = "contacts.json"

def load_contacts():
    if os.path.exists(CONTACTS_FILE):
        with open(CONTACTS_FILE, "r") as file:
            return json.load(file)
    return []

def save_contacts(contacts):
    with open(CONTACTS_FILE, "w") as file:
        json.dump(contacts, file, indent=4)

def add_contact():
    name = input("Enter Name: ")
    phone = input("Enter Phone Number: ")
    email = input("Enter Email: ")
    address = input("Enter Address: ")
    contacts.append({"name": name, "phone": phone, "email": email, "address": address})
    save_contacts(contacts)
    print(" Contact added successfully!")

def view_contacts():
    if not contacts:
        print("No contacts found.")
        return
    print("\n--- Contact List ---")
    for idx, contact in enumerate(contacts, start=1):
        print(f"{idx}. {contact['name']} - {contact['phone']}")

def search_contact():
    search = input("Enter name or phone number to search: ").lower()
    results = [c for c in contacts if search in c['name'].lower() or search in c['phone']]
    if results:
        print("\n--- Search Results ---")
        for contact in results:
            print(f"Name: {contact['name']}, Phone: {contact['phone']}, Email: {contact['email']}, Address: {contact['address']}")
    else:
        print(" No contact found.")

def update_contact():
    view_contacts()
    choice = int(input("Enter contact number to update: ")) - 1
    if 0 <= choice < len(contacts):
        print("Leave blank to keep existing value.")
        contacts[choice]['name'] = input(f"Name ({contacts[choice]['name']}): ") or contacts[choice]['name']
        contacts[choice]['phone'] = input(f"Phone ({contacts[choice]['phone']}): ") or contacts[choice]['phone']
        contacts[choice]['email'] = input(f"Email ({contacts[choice]['email']}): ") or contacts[choice]['email']
        contacts[choice]['address'] = input(f"Address ({contacts[choice]['address']}): ") or contacts[choice]['address']
        save_contacts(contacts)
        print(" Contact updated successfully!")
    else:
        print(" Invalid choice.")

def delete_contact():
    view_contacts()
    choice = int(input("Enter contact number to delete: ")) - 1
    if 0 <= choice < len(contacts):
        deleted = contacts.pop(choice)
        save_contacts(contacts)
        print(f" Deleted contact: {deleted['name']}")
    else:
        print(" Invalid choice.")

def menu():
    while True:
        print("\n===== Contact Book =====")
        print("1. Add Contact")
        print("2. View Contacts")
        print("3. Search Contact")
        print("4. Update Contact")
        print("5. Delete Contact")
        print("6. Exit")

        choice = input("Choose an option: ")

        if choice == "1":
            add_contact()
        elif choice == "2":
            view_contacts()
        elif choice == "3":
            search_contact()
        elif choice == "4":
            update_contact()
        elif choice == "5":
            delete_contact()
        elif choice == "6":
            print("Exiting Contact Book. Goodbye!")
            break
        else:
            print("Invalid choice, try again.")

contacts = load_contacts()
menu()
